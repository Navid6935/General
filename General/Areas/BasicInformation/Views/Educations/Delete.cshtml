@model General.Areas.BasicInformation.Models.Education

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/BasicInformation/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>
        var str1 = '<li>@Html.ActionLink(FarsiLanguage.FarsiLanguage._Education, "Index", "UsersAdmin", new { area = "Administrator" }, null)</li>';
    var str2 = '<li>@Html.ActionLink(FarsiLanguage.FarsiLanguage._Delete, "Delete", "UsersAdmin", new { area = "Administrator" }, null)</li>';
    $('.crumbs').append(str1);
    $('.crumbs').append(str2);

    $(document).ready(function () {
        $('input#input_text, textarea#textarea2').characterCounter();
        $("Label").css("font-size", "15px");
        $("Label").css("color", "#000000");
    });

</script>

<h4>آیا از حذف این آیتم اطمینان دارید ؟</h4>
<div>

    <hr class="alert-danger" />
    <fieldset style="margin-bottom:15px" dir="rtl">
        <legend>@FarsiLanguage.FarsiLanguage._Detail</legend>

        <div class="divider red darken-4"></div>

        <div class="section">
            <div class="row">
                <div class=" col m3 s12 push-m9" style="font-size:18px;color:#244788">
                    <span> @Html.Label(@FarsiLanguage.FarsiLanguage._EducationName) : </span>
                    @Html.DisplayFor(model => model.EName, null, "")

                </div>
            </div>
        </div>
    </fieldset>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="section">
            <div class="row center">
                <div class="input-field col m12 s12">
                    <button class="btn btn-large waves-effect waves-light red" type="submit">
                        @FarsiLanguage.FarsiLanguage._Delete
                        <i class="material-icons left">delete</i>
                </div>
            </div>
        </div>
    }
</div>

<div class="fixed-action-btn horizontal click-to-toggle">
    <a class="btn-floating btn-large pulse red">
        <i class="material-icons">menu</i>
    </a>
    <ul>
        <li><a href="@Url.Action("Index")" class="btn tooltipped btn-floating blue darken-1" data-position="top" data-delay="50" data-tooltip="لیست"><i class="material-icons">arrow_back</i></a></li>
    </ul>
</div>