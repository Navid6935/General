            </div>
        </div>
    </fieldset>
                    @using (Html.BeginForm())
            {
                        @Html.AntiForgeryToken()
                        <div class="form-actions no-color">
                            <button class="btn btn-large waves-effect waves-light red darken-2" type="submit">
                                @FarsiLanguage.FarsiLanguage._Delete
