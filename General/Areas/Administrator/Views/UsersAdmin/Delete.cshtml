                    <span> @Html.Label(@FarsiLanguage.FarsiLanguage._FirstName) : </span>
                    @Html.DisplayFor(model => model.FirstName, null, "")

                </div>
                <div class=" col m3 s12 pull-m3" style="font-size:18px;color:#244788">
                    <span> @Html.Label(@FarsiLanguage.FarsiLanguage._LastName) : </span>
                    @Html.DisplayFor(model => model.LastName, null, "")

