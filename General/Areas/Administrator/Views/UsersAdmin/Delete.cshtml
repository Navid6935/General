        </div>

        <div class="divider blue darken-4"></div>

        <div class="section">
            <div class="row">

                <div class=" col m6 s12 push-m6" style="font-size:18px;color:#244788">
                    <span> @Html.Label(@FarsiLanguage.FarsiLanguage._BirthCertificateId) : </span>
                    @Html.DisplayFor(model => model.BirthCertificateId, null, "")

                </div>
