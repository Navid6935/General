@model General.Areas.Administrator.Models.Messages

@{
    ViewBag.Title = "پیام ها و اطلاعیه ها";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container-fluid" dir="rtl">

        @Html.ValidationSummary(true, "", new { @class = "text-danger", @style = "margin-top:'15px'" })
        <fieldset style="margin-bottom:15px" dir="rtl">
            <legend>پیام ها و اطلاعیه ها</legend>
            <hr class="panel-primary" />
            <div class="row">
                <div class="col-md-4 col-sm-4 col-xs-4">
                    @Html.LabelFor(model => model.MYear, htmlAttributes: new { @class = "control-label col-sm-2  col-md-2  col-xs-2" })
                    <div class="col-sm-10 col-md-10 col-xs-10 ">
                        @Html.EditorFor(model => model.MYear, new { htmlAttributes = new { @class = "form-control text-center", @Value = DateTime.Now.ToPeString("yyyy"), @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.MYear, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-4 col-sm-4 col-xs-4">
                    @Html.LabelFor(model => model.MMounth, htmlAttributes: new { @class = "control-label col-sm-2  col-md-2  col-xs-2" })
                    <div class="col-sm-10 col-md-10 col-xs-10 ">
                        @Html.EditorFor(model => model.MMounth, new { htmlAttributes = new { @class = "form-control text-center", @Value = DateTime.Now.ToPeString("MM"), @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.MMounth, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-4 col-sm-4 col-xs-4">
                    @Html.LabelFor(model => model.Mday, htmlAttributes: new { @class = "control-label col-sm-2  col-md-2  col-xs-2" })
                    <div class="col-sm-10 col-md-10 col-xs-10 ">
                        @Html.EditorFor(model => model.Mday, new { htmlAttributes = new { @class = "form-control text-center", @Value = DateTime.Now.ToPeString("dd"), @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.Mday, "", new { @class = "text-danger" })
                    </div>
                </div>


            </div>
            <hr class="panel-primary" />
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    @Html.LabelFor(model => model.MIssue, htmlAttributes: new { @class = "control-label col-sm-1  col-md-1  col-xs-1" })
                    <div class="col-sm-10 col-md-10 col-xs-10 ">
                        @Html.EditorFor(model => model.MIssue, new { htmlAttributes = new { @class = "form-control text-center", @style = "max-width:800px" } })
                        @Html.ValidationMessageFor(model => model.MIssue, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <hr class="panel-primary" />

            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    @Html.LabelFor(model => model.MDescription, htmlAttributes: new { @class = "control-label col-sm-1  col-md-1  col-xs-1" })
                    <div class="col-sm-10 col-md-10 col-xs-10 ">
                        @Html.TextAreaFor(model => model.MDescription, htmlAttributes: new { @class = "materialize-textarea", @style = "width: 100%; max-width: 100%", @length = "1000" })
                        @Html.ValidationMessageFor(model => model.MDescription, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <hr class="panel-primary" />



            <div class="row">

                <div class="input-field col m12 s12 pull-m5">
                    <button type="submit" class="btn waves-effect waves-teal btn-large">
                        <i class="material-icons left">create</i>
                        ایجاد
                    </button>
                </div>
            </div>
        </fieldset>
    </div>
    <div class="fixed-action-btn horizontal click-to-toggle">
        <a class="btn-floating btn-large pulse green">
            <i class="material-icons">menu</i>
        </a>
        <ul>
            <li><a href="@Url.Action("Index")" class="btn tooltipped btn-floating blue darken-1" data-position="top" data-delay="50" data-tooltip="لیست"><i class="material-icons">arrow_back</i></a></li>
        </ul>
    </div>
}
<script src="//Code.jquery.com/jquery.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        var str1 = '<li>@Html.ActionLink(FarsiLanguage.FarsiLanguage._AdministratorPage, "AdminsMainPage", "AdminGeneralpages", new { area = "Administrator" }, null)</li>';
        var str2 = '<li>@Html.ActionLink(FarsiLanguage.FarsiLanguage._MessagesList, "Index")</li>';
        var str3 = '<li>@Html.ActionLink(FarsiLanguage.FarsiLanguage._MessagesCreate, "create")</li>';
        $('.crumbs').append(str1);
        $('.crumbs').append(str2);
        $('.crumbs').append(str3);
        //$('input#input_text, textarea#textarea2').characterCounter();
        $("Label").css("font-size", "15px");
        $("Label").css("color", "black");
        $('label').css("margin-top", "8px");
        //alert("asd");
    });
</script>
