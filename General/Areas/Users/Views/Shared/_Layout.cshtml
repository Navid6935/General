<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    <link href="~/Content/BootstrapJalaliDatePicker/bootstrap-datepicker.min.css" rel="stylesheet" />
    <link href="~/Content/materialize.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top" style="font-size:smaller">
        <div>
            <div class="navbar-header">

                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="@Url.Action("Index", "Home", new { area = "" })"><i class="material-icons right" style="font-size:20px">account_balance</i>@FarsiLanguage.FarsiLanguage._MainPage</a></li>
                    @*<li><a href="@Url.Action("About", "Home", new { area = "" }, null)"><i class="material-icons right" style="font-size:20px">person_pin</i>@FarsiLanguage.FarsiLanguage._About</a></li>
                        <li><a href="@Url.Action("Contact", "Home", new { area = "" }, null)"><i class="material-icons right" style="font-size:20px">perm_phone_msg</i>@FarsiLanguage.FarsiLanguage._ContactsUs</a></li>*@
                    @*<li>@Html.ActionLink("صفحه اصلی", "Index", "Home", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("برون سپاري", "ContractorsMainPage", "Contractors", new { area = "Contractors" }, null)</li>
                        <li>@Html.ActionLink("صفحه مديريت اعضاء", "AdministratorPage", "AdministratorPage", new { area = "Administrator" }, null)</li>*@
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row hidden-xs hidden-md">
            <div class="col-md-9 pull-right ">
                <img src="~/Images/Heder.png" class="col-md-8 pull-right " style="margin-top:10px;margin-bottom:10px;margin-right: -30px;" />
            </div>
            <div class="panel panel-success col-md-3 col-md-push-1 pull-left" style="font-size:12px;margin-top:20px">
                @*<div class="col-md-7 pull-left" style="padding-top:2px;padding-bottom:2px">
                        <img src="~/Images/UserPic.png" class="img-responsive img-circle img-thumbnail" />
                    </div>*@
                <div class="col-md-8 pull-right text-right">
                    <span class="ColorChange text-primary"> @Session["PId"]</span>
                    <hr style="margin-top:3px;margin-bottom:3px" />
                    <span class="ColorChange text-primary"> @Session["Name"]  @Session["Family"]</span>
                    <hr style="margin-top:3px;margin-bottom:3px" />
                    <span class="ColorChange text-primary">@Session["FullPosition"]</span>
                </div>
            </div>
        </div>
    </div>
    @* ************************************************ BreadCrumb **************************************************** *@
    <div class="container-fluid col m12 push-m6 hidden-xs" id="Mybreadcrumbs">
        @*<ul class="nav navbar-nav">
                <li>@Html.ActionLink(Farsi.Farsi._MainPage, "Index", "Home", new { area = "" }, null)</li> /
            </ul>*@
        <ul class="crumbs">
            <li class="col m2">@Html.ActionLink(FarsiLanguage.FarsiLanguage._MainPage, "Index", "Home", new { area = "" }, null)</li>
            @* <li><a href="#">css</a></li>
                <li><a href="#">آموزش ساخت breadcrumb</a></li>*@
        </ul>
    </div>
    <img src="~/Images/Line.png" class="img-resFponsive pull-right col-md-12 hidden-print hide-on-small-only" style="height:1px;margin-top:5px" />

    <div class="container body-content">
        @RenderBody()

        <hr class="alert-success" />
        <footer>
            <p class="pull-right" style="font-size:13px">&copy; @DateTime.Now.Year - نرم افزار بیمه پاسارگاد</p>
            <span dir="rtl" style="font-size:13px"> @FarsiLanguage.FarsiLanguage._Version (alpha.1 -  0.0.0)</span>
        </footer>
    </div>

    @*@Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")*@


    <script src="//Code.jquery.com/jquery.min.js"></script>
    <script src="~/Scripts/materialize.js"></script>
    <script src="~/Scripts/MyScripts/Functions.js"></script>
    <script src="~/Scripts/MyScripts/Formulas.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/table2excel.js"></script>
    <script src="~/Scripts/MyScripts/table2excel.js"></script>
    <script src="~/Scripts/BootstrapJalaliDatePicker/bootstrap-datepicker.min.js"></script>
    <script src="~/Scripts/BootstrapJalaliDatePicker/bootstrap-datepicker.fa.min.js"></script>
    @*@RenderSection("scripts", required: false)*@
</body>
</html>
